  <cxf:rsServer id="testCxfEndpoint" address="/phoenix" serviceClass="com.redhat.httpgateway.PhoenixCxfRsResource">
    <cxf:providers>
    </cxf:providers>
    <cxf:features>
    </cxf:features>
  </cxf:rsServer>
</blueprint>
